<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twotoasters.sideoftoastsample" >

    <uses-sdk
        android:targetSdkVersion="21"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.twotoasters.sideoftoastsample.BreadActivity"
            android:theme="@style/AppTheme"
            android:label="@string/bread_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BreadActionBarActivity"
                  android:theme="@style/AppCompatTheme"/>
        <activity android:name=".BreadFragmentActivity"
                  android:theme="@style/AppTheme"/>
        <activity android:name=".BreadToolBarActivity"
                  android:theme="@style/AppTheme"/>
    </application>

</manifest>
