<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/toast_menu_item_bg"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/navmenuitem_icon"
        android:layout_centerVertical="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/txtSidebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touchable_field_height"
        android:gravity="center_vertical"
        android:fontFamily="@string/font_roboto_light"
        android:textSize="@dimen/textsize_med"
        android:textColor="@color/eba_gray_meddark"
        android:padding="@dimen/standard_padding_3_4"
        android:layout_toRightOf="@+id/navmenuitem_icon"
        android:drawablePadding="@dimen/standard_padding_3_4"
        />

    <View
        android:id="@+id/divSidebar"
        style="@style/DividerAppStyle"
        android:layout_width="match_parent"/>
</RelativeLayout>