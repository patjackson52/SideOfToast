<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Styled" parent="android:style/TextAppearance.Widget"/>
    <!-- P2Reg -->
    <style name="TextAppearance.Styled.P2Reg">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/roboto</item>
    </style>

    <!-- P1Reg -->
    <style name="TextAppearance.Styled.P1Reg">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/roboto</item>
    </style>
    <style name="TextAppearance.Styled.P1Reg.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>
    <style name="TextAppearance.Styled.P2Reg.LightGrey">
        <item name="android:textColor">@color/LightGrey</item>
    </style>


    <!--ebates-->
    <style name="DividerAppStyle">
        <item name="android:layout_width">@dimen/divider_thickness</item>
        <item name="android:layout_height">@dimen/divider_thickness</item>
        <item name="android:background">@color/eba_gray_divider</item>
    </style>

    <!-- Sidebar styles -->

    <style name="SidebarInfoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/standard_padding</item>
        <item name="android:layout_marginLeft">@dimen/sidebar_info_margin</item>
        <item name="android:layout_marginRight">@dimen/sidebar_info_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SidebarInfoDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/eba_gray_meddark</item>
        <item name="android:textSize">@dimen/sidebar_footer_textsize</item>
    </style>

    <style name="SidebarInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">@dimen/sidebar_footer_textsize</item>
    </style>

</resources>
