<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Styled" parent="android:style/TextAppearance.Widget"/>
    <!-- P2Reg -->
    <style name="TextAppearance.Styled.P2Reg">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/roboto</item>
    </style>

    <!-- P1Reg -->
    <style name="TextAppearance.Styled.P1Reg">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/roboto</item>
    </style>
    <style name="TextAppearance.Styled.P1Reg.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>
    <style name="TextAppearance.Styled.P2Reg.LightGrey">
        <item name="android:textColor">@color/LightGrey</item>
    </style>
</resources>
